{% comment %}
  Header Section for Goblin Games Theme
  Includes navigation, cart, and search functionality
{% endcomment %}

<header class="header" role="banner">
  <nav class="nav-container" role="navigation" aria-label="Main navigation">
    <div class="logo-container">
      <a href="{{ routes.root_url }}" class="logo-link" aria-label="{{ shop.name }} Homepage">
        {% if settings.logo %}
          {{ settings.logo | img_url: '50x50' | img_tag: shop.name, 'logo' }}
        {% else %}
          <img src="{{ 'goblin-logo.svg' | asset_url }}" alt="{{ shop.name }} Logo" class="logo" width="50" height="50">
        {% endif %}
        <span class="logo-text">{{ shop.name }}</span>
      </a>
    </div>
    
    <button class="menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    
    <ul class="nav-menu" role="menubar">
      <li role="none">
        <a href="{{ routes.root_url }}" role="menuitem" {% if request.page_type == 'index' %}aria-current="page"{% endif %}>
          Home
        </a>
      </li>
      <li role="none">
        <a href="{{ routes.collections_url }}" role="menuitem" {% if request.page_type == 'collection' or request.page_type == 'product' %}aria-current="page"{% endif %}>
          Products
        </a>
      </li>
      <li role="none">
        <a href="{{ pages.about.url | default: '/pages/about' }}" role="menuitem" {% if page.handle == 'about' %}aria-current="page"{% endif %}>
          About
        </a>
      </li>
      <li role="none">
        <a href="{{ blogs.news.url | default: '/blogs/news' }}" role="menuitem" {% if request.page_type == 'blog' or request.page_type == 'article' %}aria-current="page"{% endif %}>
          News
        </a>
      </li>
      <li role="none">
        <a href="{{ pages.contact.url | default: '/pages/contact' }}" role="menuitem" {% if page.handle == 'contact' %}aria-current="page"{% endif %}>
          Contact
        </a>
      </li>
      
      {% comment %} Search Icon {% endcomment %}
      <li role="none" class="nav-search">
        <button class="search-toggle" aria-label="Open search" aria-expanded="false">
          üîç
        </button>
      </li>
      
      {% comment %} Wishlist Icon {% endcomment %}
      <li role="none">
        <a href="{{ pages.wishlist.url | default: '/pages/wishlist' }}" class="wishlist-link" role="menuitem" aria-label="Wishlist">
          <span class="wishlist-icon">‚ù§Ô∏è</span>
          <span class="wishlist-counter" aria-live="polite">0</span>
        </a>
      </li>
      
      {% comment %} Cart Icon {% endcomment %}
      <li role="none">
        <a href="{{ routes.cart_url }}" class="cart-link" role="menuitem" aria-label="Shopping cart" data-cart-drawer-toggle>
          <span class="cart-icon">üõí</span>
          <span class="cart-counter" aria-live="polite">{{ cart.item_count }}</span>
        </a>
      </li>
    </ul>
  </nav>
  
  {% comment %} Search Dropdown {% endcomment %}
  <div class="search-dropdown" id="search-dropdown">
    <div class="search-container">
      <form action="{{ routes.search_url }}" method="get" class="search-form">
        <input 
          type="search" 
          name="q" 
          class="search-input" 
          placeholder="Search for cards, games, accessories..." 
          aria-label="Search products"
          autocomplete="off"
          data-search-input
        >
        <button type="submit" class="search-submit" aria-label="Submit search">
          üîç
        </button>
      </form>
      
      {% if settings.predictive_search_enabled %}
        <div class="search-results" data-search-results></div>
      {% endif %}
    </div>
  </div>
</header>

<style>
  .header {
    background: var(--goblin-green, #2d5016);
    padding: 1rem 0;
    box-shadow: 0 4px 15px var(--shadow-dark, rgba(0, 0, 0, 0.3));
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
  }

  .logo {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }

  .logo-text {
    font-family: 'Cinzel', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--goblin-gold, #d4af37);
    text-decoration: none;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .nav-menu a, .search-toggle {
    color: var(--parchment, #f4f1e8);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    border: none;
    background: none;
    cursor: pointer;
    font-size: inherit;
    position: relative;
  }

  .nav-menu a:hover,
  .nav-menu a[aria-current="page"],
  .search-toggle:hover {
    color: var(--goblin-gold, #d4af37);
    background: rgba(255, 255, 255, 0.1);
  }

  .cart-link, .wishlist-link {
    position: relative;
  }

  .cart-counter, .wishlist-counter {
    position: absolute;
    top: -5px;
    right: -5px;
    background: var(--goblin-gold, #d4af37);
    color: var(--goblin-green, #2d5016);
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-size: 0.75rem;
    font-weight: bold;
    display: none;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .cart-counter[data-count]:not([data-count="0"]),
  .wishlist-counter[data-count]:not([data-count="0"]) {
    display: flex;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--parchment, #f4f1e8);
    font-size: 1.5rem;
    cursor: pointer;
    flex-direction: column;
    gap: 3px;
  }

  .menu-toggle span {
    width: 25px;
    height: 3px;
    background: currentColor;
    transition: all 0.3s ease;
  }

  .search-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .search-dropdown.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .search-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 20px;
  }

  .search-form {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .search-input {
    flex: 1;
    padding: 1rem;
    border: 2px solid var(--goblin-gold, #d4af37);
    border-radius: 8px;
    font-size: 1rem;
    outline: none;
  }

  .search-input:focus {
    border-color: var(--goblin-green, #2d5016);
    box-shadow: 0 0 10px rgba(45, 80, 22, 0.2);
  }

  .search-submit {
    background: var(--goblin-green, #2d5016);
    color: white;
    border: none;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  .search-submit:hover {
    background: var(--forest-green, #228b22);
  }

  .search-results {
    margin-top: 1rem;
    max-height: 400px;
    overflow-y: auto;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .nav-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--goblin-green, #2d5016);
      flex-direction: column;
      padding: 1rem;
      gap: 0.5rem;
    }

    .nav-menu.active {
      display: flex;
    }

    .menu-toggle {
      display: flex;
    }

    .nav-menu a {
      width: 100%;
      text-align: center;
      padding: 1rem;
    }

    .cart-link, .wishlist-link {
      justify-content: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const menuToggle = document.querySelector('.menu-toggle');
    const navMenu = document.querySelector('.nav-menu');
    
    if (menuToggle && navMenu) {
      menuToggle.addEventListener('click', function() {
        navMenu.classList.toggle('active');
        this.setAttribute('aria-expanded', navMenu.classList.contains('active'));
      });
    }

    // Search dropdown toggle
    const searchToggle = document.querySelector('.search-toggle');
    const searchDropdown = document.querySelector('.search-dropdown');
    
    if (searchToggle && searchDropdown) {
      searchToggle.addEventListener('click', function() {
        searchDropdown.classList.toggle('active');
        this.setAttribute('aria-expanded', searchDropdown.classList.contains('active'));
        
        if (searchDropdown.classList.contains('active')) {
          const searchInput = searchDropdown.querySelector('.search-input');
          setTimeout(() => searchInput?.focus(), 100);
        }
      });

      // Close search when clicking outside
      document.addEventListener('click', function(e) {
        if (!searchToggle.contains(e.target) && !searchDropdown.contains(e.target)) {
          searchDropdown.classList.remove('active');
          searchToggle.setAttribute('aria-expanded', 'false');
        }
      });
    }

    // Update cart counter
    function updateCartCounter() {
      const counter = document.querySelector('.cart-counter');
      if (counter) {
        counter.textContent = {{ cart.item_count }};
        counter.style.display = {{ cart.item_count }} > 0 ? 'flex' : 'none';
      }
    }

    // Initialize cart counter
    updateCartCounter();
  });
</script>