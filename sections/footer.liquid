{% comment %}
  Footer Section for Goblin Games Theme
  Includes links, newsletter signup, and social media
{% endcomment %}

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{{ shop.name }}</h3>
        <p>{{ shop.description | default: "Your magical destination for trading card games and collectibles." }}</p>
        <div class="social-links">
          {% if settings.social_facebook_link %}
            <a href="{{ settings.social_facebook_link }}" aria-label="Follow us on Facebook" class="social-link" target="_blank" rel="noopener">üìò</a>
          {% endif %}
          {% if settings.social_twitter_link %}
            <a href="{{ settings.social_twitter_link }}" aria-label="Follow us on Twitter" class="social-link" target="_blank" rel="noopener">üê¶</a>
          {% endif %}
          {% if settings.social_instagram_link %}
            <a href="{{ settings.social_instagram_link }}" aria-label="Follow us on Instagram" class="social-link" target="_blank" rel="noopener">üì∑</a>
          {% endif %}
          {% if settings.social_youtube_link %}
            <a href="{{ settings.social_youtube_link }}" aria-label="Subscribe to our YouTube channel" class="social-link" target="_blank" rel="noopener">üì∫</a>
          {% endif %}
          {% if settings.social_discord_link %}
            <a href="{{ settings.social_discord_link }}" aria-label="Join our Discord server" class="social-link" target="_blank" rel="noopener">üéÆ</a>
          {% endif %}
          {% if settings.social_tiktok_link %}
            <a href="{{ settings.social_tiktok_link }}" aria-label="Follow us on TikTok" class="social-link" target="_blank" rel="noopener">üéµ</a>
          {% endif %}
        </div>
      </div>
      
      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul>
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.collections_url }}">Products</a></li>
          <li><a href="{{ pages.about.url | default: '/pages/about' }}">About</a></li>
          <li><a href="{{ pages.contact.url | default: '/pages/contact' }}">Contact</a></li>
          {% if blogs.news %}
            <li><a href="{{ blogs.news.url }}">News & Events</a></li>
          {% endif %}
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>Customer Care</h4>
        <ul>
          <li><a href="{{ pages.shipping.url | default: '/pages/shipping' }}">Shipping Info</a></li>
          <li><a href="{{ pages.returns.url | default: '/pages/returns' }}">Returns</a></li>
          <li><a href="{{ pages.faq.url | default: '/pages/faq' }}">FAQ</a></li>
          <li><a href="{{ pages.support.url | default: '/pages/support' }}">Support</a></li>
          {% if shop.terms_of_service.url %}
            <li><a href="{{ shop.terms_of_service.url }}">Terms of Service</a></li>
          {% endif %}
          {% if shop.privacy_policy.url %}
            <li><a href="{{ shop.privacy_policy.url }}">Privacy Policy</a></li>
          {% endif %}
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>Newsletter</h4>
        <p>Stay updated with new arrivals and exclusive offers!</p>
        
        {% form 'customer', class: 'newsletter-form', id: 'newsletter-form' %}
          {% if form.posted_successfully? %}
            <div class="form-success">
              Thanks for subscribing! Welcome to our magical community! üßô‚Äç‚ôÇÔ∏è
            </div>
          {% endif %}
          
          {% if form.errors %}
            <div class="form-error">
              {% for field in form.errors %}
                {{ form.errors.messages[field] }}
              {% endfor %}
            </div>
          {% endif %}
          
          <div class="newsletter-input-group">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Your email" 
              required 
              aria-label="Email address for newsletter"
              class="newsletter-input"
              value="{% if form.email %}{{ form.email }}{% endif %}"
            >
            <input type="hidden" name="contact[tags]" value="newsletter">
            <button type="submit" class="btn btn-small newsletter-btn">Subscribe</button>
          </div>
        {% endform %}
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        {% if shop.privacy_policy.url %}
          | <a href="{{ shop.privacy_policy.url }}">Privacy Policy</a>
        {% endif %}
        {% if shop.terms_of_service.url %}
          | <a href="{{ shop.terms_of_service.url }}">Terms of Service</a>
        {% endif %}
      </p>
      
      {% if shop.address %}
        <div class="footer-address">
          {{ shop.address.address1 }}{% if shop.address.address2 %}, {{ shop.address.address2 }}{% endif %}<br>
          {{ shop.address.city }}, {{ shop.address.province }} {{ shop.address.zip }}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--goblin-green, #2d5016);
    color: var(--parchment, #f4f1e8);
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h3,
  .footer-section h4 {
    font-family: 'Cinzel', serif;
    color: var(--goblin-gold, #d4af37);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
  }

  .footer-section p {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: rgba(244, 241, 232, 0.9);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section ul li a {
    color: rgba(244, 241, 232, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section ul li a:hover {
    color: var(--goblin-gold, #d4af37);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(244, 241, 232, 0.1);
    border-radius: 50%;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .social-link:hover {
    background: var(--goblin-gold, #d4af37);
    border-color: var(--goblin-gold, #d4af37);
    transform: translateY(-2px);
  }

  .newsletter-form {
    margin-top: 1rem;
  }

  .newsletter-input-group {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.75rem;
    border: 2px solid rgba(244, 241, 232, 0.3);
    border-radius: 5px;
    background: rgba(244, 241, 232, 0.1);
    color: var(--parchment, #f4f1e8);
    font-size: 0.9rem;
  }

  .newsletter-input::placeholder {
    color: rgba(244, 241, 232, 0.6);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--goblin-gold, #d4af37);
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.3);
  }

  .newsletter-btn {
    background: var(--goblin-gold, #d4af37);
    color: var(--goblin-green, #2d5016);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-btn:hover {
    background: #f4d03f;
    transform: translateY(-2px);
  }

  .form-success {
    background: var(--forest-green, #228b22);
    color: white;
    padding: 0.75rem;
    border-radius: 5px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .form-error {
    background: #dc3545;
    color: white;
    padding: 0.75rem;
    border-radius: 5px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .footer-bottom {
    border-top: 1px solid rgba(244, 241, 232, 0.2);
    padding-top: 2rem;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(244, 241, 232, 0.8);
  }

  .footer-bottom a {
    color: var(--goblin-gold, #d4af37);
    text-decoration: none;
  }

  .footer-bottom a:hover {
    text-decoration: underline;
  }

  .footer-address {
    font-size: 0.9rem;
    color: rgba(244, 241, 232, 0.8);
    text-align: right;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .newsletter-input-group {
      flex-direction: column;
    }

    .newsletter-btn {
      width: 100%;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .footer-address {
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }

  /* Animation for footer sections */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .footer-section {
    animation: fadeInUp 0.6s ease;
  }

  .footer-section:nth-child(2) {
    animation-delay: 0.1s;
  }

  .footer-section:nth-child(3) {
    animation-delay: 0.2s;
  }

  .footer-section:nth-child(4) {
    animation-delay: 0.3s;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Newsletter form enhancement
    const newsletterForm = document.getElementById('newsletter-form');
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        const emailInput = this.querySelector('input[type="email"]');
        const email = emailInput.value.trim();
        
        // Basic email validation
        if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
          e.preventDefault();
          
          // Show temporary error message
          let errorMsg = this.querySelector('.temp-error');
          if (!errorMsg) {
            errorMsg = document.createElement('div');
            errorMsg.className = 'form-error temp-error';
            this.insertBefore(errorMsg, this.querySelector('.newsletter-input-group'));
          }
          
          errorMsg.textContent = 'Please enter a valid email address.';
          
          setTimeout(() => {
            if (errorMsg.parentNode) {
              errorMsg.parentNode.removeChild(errorMsg);
            }
          }, 3000);
          
          return false;
        }
      });
    }

    // Smooth scroll for footer links
    const footerLinks = document.querySelectorAll('.footer a[href^="#"]');
    footerLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>